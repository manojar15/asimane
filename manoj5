<select name="myDropdown">
  <option value="">Select a value...</option>
  <script>
  var myOptions = "$myToken$".split(",");
  myOptions.forEach(function(option) {
    var optionElement = document.createElement("option");
    optionElement.text = option;
    optionElement.value = option;
    document.getElementsByName("myDropdown")[0].add(optionElement);
  });
  </script>
</select>


<select name="myDropdown">
  <option value="">Select a value...</option>
  <script>
    var myOptions = "<$myToken$>".split(",");
    myOptions.forEach(function(option) {
      var optionElement = document.createElement("option");
      optionElement.text = option;
      optionElement.value = option;
      document.getElementsByName("myDropdown")[0].add(optionElement);
    });
  </script>
</select>




<select name="myDropdown">
  <option value="">Select a value...</option>
  <script>
    var myOptions = "<$myToken$>".replace(/&lt;/g, "<").split(",");
    myOptions.forEach(function(option) {
      var optionElement = document.createElement("option");
      optionElement.text = option;
      optionElement.value = option;
      document.getElementsByName("myDropdown")[0].add(optionElement);
    });
  </script>
</select>






<select>
  <option>Select an option</option>
  <% foreach result in results %>
  <option value="<%=result.field_name%>"><%=result.field_name%></option>
  <% end %>
</select>




<dropdown id="project-dropdown" default="Select a project">
  <label>Project Name:</label>
  <choice value="">Select a project</choice>
  <query>index=my_index | stats values(projectname) as projectname</query>
  <choice value="$projectname$">$projectname$</choice>
</dropdown>
